<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @books %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', { user: current_user , users: @user } %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', {book: @books, btn: "Create Book"}%>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render 'layouts/search' %>
      <h2>Books</h2>
      <%= link_to "Default", books_path(sort: "") %> | 
      <%= link_to "新しい順", books_path(sort: "created_at DESC") %> | 
      <%= link_to "評価の高い順", books_path(sort: "star DESC") %>
      <%= render 'index', { book: @book, book_detail: @book_datail } %>
  </div>
  </div>
</div>
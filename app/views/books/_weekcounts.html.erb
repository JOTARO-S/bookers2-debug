<h4 class="mt-4">7日間分の投稿数</h4>
<table class="table table-bordered">
   <thead>
    <tr>
     <th>6日前</th>
     <th>5日前</th>
     <th>4日前</th>
     <th>3日前</th>
     <th>2日前</th>
     <th>昨日</th>
     <th>今日</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <th><%= book.created_6days.count %></th>
     <th><%= book.created_5days.count %></th>
     <th><%= book.created_4days.count %></th>
     <th><%= book.created_3days.count %></th>
     <th><%= book.created_2days.count %></th>
     <th><%= yesterday.count %></th>
     <th><%= today.count %></th>
    </tr>
   </tbody>
  </table>
  
<canvas id="myChart" class="mt-2"></canvas>
<script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
          type: 'line',
          data: {
              labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
              datasets: [
                  {
                      label: '投稿した本の数',
                      data: [
                          <%= book.created_6days.count %>,
                          <%= book.created_5days.count %>,
                          <%= book.created_4days.count %>,
                          <%= book.created_3days.count %>,
                          <%= book.created_2days.count %>,
                          <%= yesterday.count %>,
                          <%= today.count %>
                        ],
                  borderColor: "rgba(0,0,255,1)",
                  backgroundColor: "rgba(0,0,0,0)",
                  lineTension: 0.3
                  }
                ],
              },
          options: {
            title: {
                display: true,
                text: '7日間の投稿数の比較'
            },
            responsive: true,
            scales: {
                y: {
                    suggestedMax: 10,
                    suggestedMin: 0,
                    stepSize: 1
                    },
                }
            }
    });
</script>